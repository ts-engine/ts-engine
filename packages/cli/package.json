{
  "name": "@ts-engine/cli",
  "version": "2.0.0-beta.1",
  "description": "Write TypeScript packages with optionally zero configuration.",
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "url": "https://github.com/ts-engine/ts-engine"
  },
  "keywords": [
    "ts-engine",
    "linting",
    "eslint",
    "config",
    "eslint-config",
    "prettier"
  ],
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node10.13 --outfile=dist/index.js",
    "lint": "eslint src/**/*.ts",
    "start": "yarn build && node dist/index.js",
    "typecheck": "tsc"
  },
  "devDependencies": {
    "@ts-engine/cli": "2.0.0-beta.1",
    "esbuild": "^0.8.1",
    "eslint": "^7.12.1",
    "jest": "^26.6.1"
  },
  "dependencies": {
    "typescript": "^4.0.5"
  }
}
